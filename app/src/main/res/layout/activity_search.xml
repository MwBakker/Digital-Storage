<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorDark">

        <data>
                <import type="android.view.View"/>
                <variable
                    name="vm"
                    type="com.mwb.digitalstorage.viewmodel.SearchViewModel"/>
                <variable
                    name="cmdHandler"
                    type="com.mwb.digitalstorage.command_handlers.SearchCmdHandler"/>
        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/match_parent">
                <TextView
                    android:id="@+id/txt_username"
                    style="@style/wrap_content"
                    android:textColor="@color/orange"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="@{vm.previousActivityNameObsv}"/>
                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.50"
                    app:layout_constraintTop_toTopOf="@id/txt_username"
                    app:layout_constraintRight_toLeftOf="@id/txt_date"
                    app:layout_constraintBottom_toBottomOf="@id/txt_username"
                    app:layout_constraintLeft_toLeftOf="@id/txt_username"
                    android:textSize="20dp"
                    android:textColor="@color/orange"
                    android:textColorHint="@color/orange"
                    android:hint="Search"
                    android:onTextChanged="@{cmdHandler::onTextChanged}"/>
                <TextView
                    android:id="@+id/txt_date"
                    style="@style/wrap_content"
                    android:textColor="@color/orange"
                    app:layout_constraintTop_toTopOf="@id/edit_search"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/edit_search"
                    android:layout_marginRight="15dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.725"
                    android:fillViewport="true"
                    app:layout_constraintTop_toBottomOf="@id/txt_username"
                    android:layout_marginTop="20dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_storage_units"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.375"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="15dp"
                            android:adapter="@{vm.foundEntitiesAdapterObsv}"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="1"
                            tools:listitem="@layout/searched_entity" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>