<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".StorageMenuActivity"
        android:background="@color/colorLighter">

    <data>
        <import type="android.view.View"/>
        <variable
            name="cmdHandler"
            type="com.mwb.digitalstorage.command_handlers.StorageMenuCmdHandler"/>
        <variable
            name="photoCmdHandler"
            type="com.mwb.digitalstorage.command_handlers.entity.PhotoCmdHandler"/>
        <variable
            name="vm"
            type="com.mwb.digitalstorage.viewmodel.StorageMenuViewModel"/>
    </data>

    <ScrollView
        style="@style/match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/storage_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:backgroundTint="@android:color/white"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:hint="Storage name"
                android:text="@={vm.storageNameObsv}"/>
            <EditText
                android:id="@+id/edit_storage_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/storage_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:backgroundTint="@android:color/white"
                android:layout_marginTop="125dp"
                android:textColor="@android:color/white"
                android:hint="Storage location"
                android:text="@={vm.storageLocObsv}"/>
            <include
                android:id="@+id/img_view"
                layout="@layout/img_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:img="@{vm.storageImgObsv}"
                app:showImgButtons="@{true}"
                app:cmdHandler="@{photoCmdHandler}"
                app:layout_constraintTop_toBottomOf="@id/edit_storage_loc"/>
            <TextView
                android:id="@+id/txt_rack_amount"
                style="@style/wrap_content"
                android:textSize="28dp"
                app:layout_constraintTop_toTopOf="@+id/numberpicker"
                app:layout_constraintRight_toLeftOf="@id/numberpicker"
                app:layout_constraintTop_toBottomOf="@id/numberpicker"
                android:layout_marginTop="60dp"
                android:layout_marginRight="100dp"
                android:text="Amount of racks in storage unit"/>
            <com.mwb.digitalstorage.misc.CustomNumberPicker
                android:id="@+id/numberpicker"
                style="@style/numberpicker"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/img_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_add_storage"
                android:layout_marginRight="75dp"
                min="0"  max="50"
                android:onValueChange="@{(picker,oldv,newv) -> cmdHandler.numberPickerValChanged(newv)}"/>
            <Button
                android:id="@+id/btn_cancel"
                style="@style/btn_general"
                android:textColor="@color/orange"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Cancel"
                android:onClick="@{(view) -> cmdHandler.cancelMenu()}"/>
            <Button
                android:id="@+id/btn_add_storage"
                style="@style/btn_general"
                android:textColor="@color/orange"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Add Storage"
                android:onClick="@{(view) -> cmdHandler.addEntity()}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>