<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="cmdHandler"
            type="com.mwb.digitalstorage.command_handlers.ComponentCategoryCmdHandler" />

        <variable
            name="UIComponentCategory"
            type="com.mwb.digitalstorage.modelUI.UIComponentCategory" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp">

        <TextView
            style="@style/edit_item"
            android:layout_width="0dp"
            android:onClick="@{(view) -> cmdHandler.sort(UIComponentCategory)}"
            android:onLongClick="@{(view) -> cmdHandler.editComponentCat(UIComponentCategory)}"
            android:text="@{UIComponentCategory.componentCatName}"
            android:textColor="@{safeUnbox(UIComponentCategory.color)}"
            android:textSize="32sp"
            android:visibility="@{safeUnbox(UIComponentCategory.isEdit) ? View.GONE : View.VISIBLE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.80" />

        <TextView
            style="@style/edit_item"
            android:layout_width="0dp"
            android:text="@{UIComponentCategory.amountOfComponents}"
            android:textColor="@{safeUnbox(UIComponentCategory.color)}"
            android:textSize="32sp"
            android:visibility="@{safeUnbox(UIComponentCategory.isEdit) ? View.GONE : View.VISIBLE}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <EditText
            android:id="@+id/edit_category_name"
            style="@style/edit_item"
            android:layout_width="0dp"
            android:onTextChanged="@{UIComponentCategory::onTextChanged}"
            android:text="@{UIComponentCategory.componentCatName}"
            android:textColor="@{safeUnbox(UIComponentCategory.color)}"
            android:textSize="32sp"
            android:visibility="@{safeUnbox(UIComponentCategory.isEdit) ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.75" />

        <ImageButton
            android:id="@+id/btn_approve"
            style="@style/icon_check"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:onClick="@{() -> cmdHandler.saveEdit()}"
            android:visibility="@{safeUnbox(UIComponentCategory.isEdit) ? View.VISIBLE : View.GONE}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_category_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>