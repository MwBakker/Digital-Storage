<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".RackOverViewActivity"
        android:background="@color/colorLighter">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.mwb.digitalstorage.viewmodel.RackOverViewViewModel"/>
        <variable
            name="rackCmdHandler"
            type="com.mwb.digitalstorage.command_handlers.RackCmdHandler"/>
        <variable
            name="tbvm"
            type="com.mwb.digitalstorage.viewmodel.ToolbarViewModel"/>
        <variable
            name="tbCmdHandler"
            type="com.mwb.digitalstorage.command_handlers.ToolbarCmdHandler"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
       style="@style/match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:vm="@{tbvm}"
            app:cmdHandler="@{tbCmdHandler}"/>
        <include
            android:id="@+id/main_image"
            layout="@layout/faded_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:img="@{vm.storageImgObs}"
            app:layout_constraintHeight_percent="0.215"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.745"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/main_image">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/hr"
                    style="@style/hr_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_racks"
                    style="@style/recycler_view_storages"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.85"
                    app:layout_constraintTop_toBottomOf="@id/hr"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:adapter="@{vm.rackListAdapterObs}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/rack_item" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/FABStorage"
                    style="@style/floating_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="15dp"
                    android:onClick="@{(view) -> rackCmdHandler.addNewEntity()}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>